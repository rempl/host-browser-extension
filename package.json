{
  "name": "host-chromium-extension",
  "version": "1.0.0",
  "description": "Rempl host for Chromium Developer Tools",
  "author": "Roman Dvornov",
  "license": "MIT",
  "repository": "rempl/host-chromium-extension",
  "homepage": "https://github.com/rempl/host-chromium-extension",
  "bugs": {
    "url": "https://github.com/rempl/host-chromium-extension/issues"
  },
  "keywords": [
    "rempl",
    "host"
  ],
  "dependencies": {
    "rempl": "1.0.0-alpha14"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "esbuild": "^0.13.13",
    "eslint": "^7.0.0",
    "jszip": "^3.5.0"
  },
  "scripts": {
    "lint": "eslint --ext .js src scripts",
    "dev": "node ./scripts/build.js",
    "build": "NODE_ENV=production node ./scripts/build.js && node ./scripts/zip.js"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "no-duplicate-case": "error",
      "no-undef": "error",
      "no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used"
        }
      ]
    }
  }
}
